// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}", // 调试整个项目，通常是 main 包
            "env": {},
            "args": []
        },
        {
            "name": "Debug Current File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}", // 调试当前打开的文件
            "env": {},
            "args": []
        },
        {
            "name": "Debug Service Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/internal/service", // 指定你的测试文件所在的包路径
            "env": {},
            "args": [
                // "-run", "TestDeposit/SuccessfulDeposit" // 示例：如果要调试某个具体的测试函数，取消注释并修改
            ]
        }
    ]
}